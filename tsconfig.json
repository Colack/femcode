{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "node",  // Ensures Node.js-compatible module resolution
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
